#!/bin/sh
if [ -z "$*" ]; then
  input_file=$(fzf) 
else
  input_file=$*
fi
read -p "Title: " title
read -p "Artist: " artist
read -p "album: " album
output_name="metadata-$input_file"
ffmpeg -i "$input_file" -metadata title="$title" -metadata artist="$artist" -metadata album="$album"  -c copy "$output_name" 
mv -f "$output_name" "$input_file"
